#include <bits/stdc++.h>
using namespace std;

class Shape {
public:
    virtual void draw() = 0;   // Pure virtual function

    virtual ~Shape() {}        // Virtual destructor
};

class Circle : public Shape {
public:
    void draw() override {
        cout << "Drawing Circle" << endl;
    }
};

int main() {
    Shape* s = new Circle();   // Polymorphism
    s->draw();
    delete s;
    return 0;
}
