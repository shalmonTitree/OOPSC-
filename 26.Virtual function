#include <bits/stdc++.h>
using namespace std;

class Base {
public:
    virtual void show() {
        cout << "Base show function" << endl;
    }

    virtual ~Base() {}
};

class Derived : public Base {
public:
    void show() override {
        cout << "Derived show function" << endl;
    }
};

int main() {
    Base* b = new Derived();
    b->show();   // Calls Derived's show()
    delete b;
    return 0;
}
