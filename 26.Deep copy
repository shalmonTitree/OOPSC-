#include <bits/stdc++.h>
using namespace std;

class Deep {
public:
    int* ptr;

    Deep(int x) {
        ptr = new int(x);
    }

    // User-defined copy constructor â†’ deep copy
    Deep(const Deep& d) {
        ptr = new int(*d.ptr);
    }

    ~Deep() {
        delete ptr;
    }
};

int main() {
    Deep d1(20);
    Deep d2 = d1;   // deep copy

    *d2.ptr = 50;

    cout << *d1.ptr << " " << *d2.ptr << endl;
    return 0;
}
