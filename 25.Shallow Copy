#include <bits/stdc++.h>
using namespace std;

class Shallow {
public:
    int* ptr;

    Shallow(int x) {
        ptr = new int(x);
    }

    // default copy constructor â†’ shallow copy
    ~Shallow() {
        delete ptr;
    }
};

int main() {
    Shallow s1(10);
    Shallow s2 = s1;   // shallow copy

    cout << *s1.ptr << " " << *s2.ptr << endl;
    return 0;
}
